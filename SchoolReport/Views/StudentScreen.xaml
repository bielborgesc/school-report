<Window x:Class="SchoolReport.StudentScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolReport"
        mc:Ignorable="d"
        Title="StudentScreen" Height="400" Width="400">
    <Grid>
        <Label Content="Student Area" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Name:"  HorizontalAlignment="Left" Margin="40,105,0,0" VerticalAlignment="Top" Width="47"/>
        <Label Content="Email: " HorizontalAlignment="Left" Margin="40,191,0,0" VerticalAlignment="Top" Width="47"/>

        <Button Content="Save"  Click="SaveBtn" HorizontalAlignment="Left" Margin="158,298,0,0" VerticalAlignment="Top" Height="29" Width="75"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding Name}" Margin="105,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="262"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding Email}" Margin="105,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="262" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
