<Window x:Class="SchoolReport.DisciplineScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolReport"
        mc:Ignorable="d"
        Title="DisciplineScreen" Height="200" Width="400">
    <Grid>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Width="64"/>
        <Label Content="Grade:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="64"/>
        <Button Click="SaveBtn" Content="Save" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top" Height="26" Width="58"/>
        <TextBox HorizontalAlignment="Left" Margin="60,30,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="296" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Margin="60,0,0,0" TextWrapping="Wrap" Text="{Binding Grade}" VerticalAlignment="Center" Width="296" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
